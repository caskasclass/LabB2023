<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_LEFT" styleClass="base" stylesheets="@../css/main.css" type="StackPane" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="primaryShader" maxHeight="300.0" minHeight="300.0">
         <StackPane.margin>
            <Insets />
         </StackPane.margin></HBox>
      <VBox fx:id="contentContainer" alignment="TOP_CENTER" prefWidth="600.0" spacing="10.0">
         <padding>
            <Insets bottom="65.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <StackPane.margin>
            <Insets top="64.0" />
         </StackPane.margin>
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Le tue Playlist ">
                     <VBox.margin>
                        <Insets bottom="16.0" />
                     </VBox.margin>
                  </Label>
                  <FlowPane fx:id="playlistBoxContainer" alignment="CENTER_LEFT" hgap="12.0" maxWidth="1.7976931348623157E308" styleClass="playlistBox_container" vgap="12.0" VBox.vgrow="ALWAYS" />
                  <HBox nodeOrientation="RIGHT_TO_LEFT">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#explorePlaylist" styleClass="button_box" text="see all">
                           <HBox.margin>
                              <Insets top="20.0" />
                           </HBox.margin></Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </VBox>
            <VBox fx:id="gridContainer">
               <children>
                  <Label text="Album del momento">
                     <VBox.margin>
                        <Insets bottom="16.0" />
                     </VBox.margin></Label>
                  <HBox nodeOrientation="RIGHT_TO_LEFT" />
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </VBox>
            <VBox>
               <children>
                  <Label text="Titoli del momento ">
                     <VBox.margin>
                        <Insets bottom="16.0" />
                     </VBox.margin>
                  </Label>
                  <VBox fx:id="tableViewContainer" VBox.vgrow="ALWAYS" />
                  <HBox nodeOrientation="RIGHT_TO_LEFT">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#openAllTrack" styleClass="button_box" text="see all">
                           <HBox.margin>
                              <Insets top="20.0" />
                           </HBox.margin></Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Espolora Playlist ">
                     <VBox.margin>
                        <Insets bottom="16.0" />
                     </VBox.margin>
                  </Label>
                  <FlowPane fx:id="othersPlaylistBoxContainer" alignment="CENTER_LEFT" hgap="12.0" maxWidth="1.7976931348623157E308" styleClass="playlistBox_container" vgap="12.0" VBox.vgrow="ALWAYS" />
                  <HBox nodeOrientation="RIGHT_TO_LEFT">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#explorePlaylist" styleClass="button_box" text="see all">
                           <HBox.margin>
                              <Insets top="20.0" />
                           </HBox.margin></Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</fx:root>
